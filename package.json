{
  "name": "teslasql",
  "productName": "TeslaSQL",
  "version": "1.0.0",
  "description": "A HeidiSQL like SQL management tool written in HTML and Javascript using electron.",
  "main": "assets/js/main.js",
  "scripts": {
    "start": "electron .",
    "package-linux": "electron-packager . --overwrite --platform=linux --arch=x64 --icon=assets/icons/teslasql.png --prune=true --out=build",
    "deb64": "electron-installer-debian --src build/TeslaSQL-linux-x64/ --dest build/installers/ --arch amd64"
  },
  "repository": "https://github.com/hutilicious/teslasql",
  "keywords": [
    "TeslaSQL",
    "HeidiSQL",
    "MySQL",
    "HTML",
    "Javascript"
  ],
  "author": "GitHub",
  "license": "MIT",
  "devDependencies": {
    "electron": "~1.6.2",
    "electron-packager": "^8.6.0"
  },
  "dependencies": {
    "electron-json-storage": "^3.0.5",
    "electron-localshortcut": "^1.1.1",
    "handsontable": "^0.31.2",
    "highlightjs": "^9.10.0",
    "jquery": "^3.2.1",
    "jquery-resizable-dom": "^0.20.0",
    "monaco-editor": "^0.8.3",
    "mysql": "^2.13.0",
    "rangy": "^1.3.0",
    "sql-formatter": "^1.2.0",
    "striptags": "^3.0.1"
  },
  "optionalDependencies": {
    "electron-installer-debian": "^0.5.1"
  }
}
